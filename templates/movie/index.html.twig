{% extends "base.html.twig" %}

{% block title %}

    Movies Page

{% endblock %}


{% block body %}


    <div class="container">


        <div class="row">


            <div style="margin-top: 2em;">
                <div class="col-md-10">

                    <h3> List ({{ movies|length }})</h3>

                </div>

                <div class="col-sm-2 mb-5">
                    <a class="btn btn-sm btn-success" href="{{ path('movie.create') }}">Create New</a>
                </div>




            <table class="table table-hover table-sm">

                <tr>

                    <th width="50px">No.</th>

                    <th>Title</th>


                    <th>Release Year</th>

                    <th>image</th>


                    <th>Action</th>


                    {% for movie in movies %}
                <tr>

                    <td><b>1</b></td>
                    <td>{{ movie.title }}</td>
                    <td>{{ movie.description }}</td>
                    <td><img src="{{ asset(movie.imagePath) }}" width="100px" alt=""></td>
                    <td>

                        <form action="#" method="post">
                            <a class="btn btn-success" href="/movies/{{ movie.id }}">Show</a>
                            <a class="btn btn-warning" href="/movies/edit/{{ movie.id }}">edit</a>
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>


                    </td>
                </tr>
                    {% endfor %}




            </table>


            </div>
        </div>



    </div>





{% endblock %}
